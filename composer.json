{
    "name": "mjohndus/barcoder",
    "type": "library",
    "license": "Apache-2.0",
    "description": "PHP library to generate barcodes",
    "keywords": ["library", "barcode", "2d-barcode"],
    "homepage": "https://github.com/mjohndus/Barcoder",
    "authors": [
        {
            "name": "mjohndus",
            "homepage": "https://github.com/mjohndus",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1||^8"
    },
    "autoload": {
        "psr-4": {
            "Barcoder\\": "src"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze"
    },
    "require-dev": {
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "11.5.2 || 10.5.40",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
